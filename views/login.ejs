<script type="text/javascript">
    function checkUser(va){
	var reg=/^[\u4e00-\u9fa5]{2,4}$/;
            if(!reg.test(va)){
				document.getElementById("user").value="";
				$("#use").addClass("has-error");
				document.getElementById("user").setAttribute("placeholder","用户名必须为3-4位汉字");
				 document.form1.sub.disabled=true;
			}else{
                    $("#use").removeClass("has-error");
                    document.form1.sub.disabled=false;
   }      
        }
		function checkGrade(va){
	var reg=/^[\u4e00-\u9fa5]{3}$/;
            if(!reg.test(va)){
				document.getElementById("grade").value="";
				$("#gra").addClass("has-error");
				document.getElementById("grade").setAttribute("placeholder","班级格式为:科技一，三位汉字");
				 document.form1.sub.disabled=true;
			}else{
                    $("#gra").removeClass("has-error");
                    document.form1.sub.disabled=false;
   }      
        }
		function checkNumber(va){
		var reg= /^[0-9]{10}$/;   
			 if(va.length!=10){
				document.getElementById("number").value="";
				$("#num").addClass("has-error");
				 document.getElementById("number").setAttribute("placeholder","学号必须为10位数字");
				document.form1.sub.disabled=true;
			
			}else{
           $("#num").removeClass("has-error");
            document.form1.sub.disabled=false;
            }   
		}
    function checkpwd(va){
        if(va==""){
			document.getElementById("pwd").value="";
			$("#pw").addClass("has-error");
			document.getElementById("pwd").setAttribute("placeholder","密码不能为空");
           
            document.form1.sub.disabled=true;
        }else{
			$("#pw").removeClass("has-error");
            document.form1.sub.disabled=false;
            }                       
    }
    function checkRpwd(va){
        var pwd=document.getElementById("pwd").value;
        if(va==""){
			document.getElementById('rpwd').value="";
			$("#rpw").addClass("has-error");
			document.getElementById("rpwd").setAttribute("placeholder","密码不能为空");
            
            document.form1.sub.disabled=true;
        }else{
           $("#rpw").removeClass("has-error");
            document.form1.sub.disabled=false;
            }   
        if(va!=pwd){
			document.getElementById('rpwd').value="";
			$("#rpw").addClass("has-error");
			document.getElementById("rpwd").setAttribute("placeholder","密码不一致");
          
            document.form1.sub.disabled=true;
        }else{
			$("#rpw").removeClass("has-error");
            document.form1.sub.disabled=false;
            }   
    }
 
    function checkEmail(va){
            
         var myreg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/;
         if(!myreg.test(va)){
			document.getElementById('email').value="";
				$("#emi").addClass("has-error");	
				document.getElementById("email").setAttribute("placeholder","请检查邮箱格式");
             
             document.form1.sub.disabled=true;
            }else{
               $("#emi").removeClass("has-error");
                document.form1.sub.disabled=false;
            }   
    }
         
</script>





